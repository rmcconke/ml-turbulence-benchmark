FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver           GAMG;
        tolerance        1e-12;
        relTol           0.001;
        minIter          5;
        maxIter          200;
        smoother         GaussSeidel; 
        nPreSweeps       1;
        nPostSweeps      3;
        nFinestSweeps    3;
        scaleCorrection true;
        directSolveCoarsest false;
        cacheAgglomeration on;
        nCellsInCoarsestLevel 50;   
        agglomerator     faceAreaPair;
        mergeLevels      1;  
    }

    U
    {
        solver          PBiCG;
        preconditioner  DILU;
        tolerance       1e-09;
        relTol          0.1;
    }

    k
    {
        solver          PBiCG;
        preconditioner  DILU;
        tolerance       1e-09;
        relTol          0.1;
    }


    omega
    {
        solver          PBiCG;
        preconditioner  DILU;
        tolerance       1e-09;
        relTol          0.1;
    }


    epsilon
    {
        solver          PBiCG;
        preconditioner  DILU;
        tolerance       1e-09;
        relTol          0.1;
    }
  
}

SIMPLE
{
    nNonOrthogonalCorrectors 0;
    pRefPoint (0.5 1 0);
    pRefValue 1;
    residualControl
    {
          p               	1e-15;
    }
}

relaxationFactors
{
    p               0.5;
    U               0.5;
    k               0.7;
    omega           0.7;
}


